<section>
  
  {{#if league.pending }}
  <div>
    <p>This league is still awaiting approval from an admin.</p>
    <a href="/leagues">All user leagues</a>
  </div>
  {{ else }}
  <h2>{{ league.name }}</h2>
  <p>{{ league.description }}</p>
  <p>Created by <a href="/users/{{ league.[user.id] }}">{{ league.[user.username] }}</a></p>
  
  <table>
    <thead>
      <tr>
        <th>Place</th>
        <th>Player</th>
        <th>Points</th>
        <th>CS</th>
        <th>CD</th>
        <th>CR</th>
      </tr>
    </thead>
    <tbody>
      {{#each players }}
      <tr>
        <td></td>
        <td><a href="/users/{{ id }}">{{ name }}</a></td>
        <td>{{ points }}</td>
        <td>{{ cs }}</td>
        <td>{{ cd }}</td>
        <td>{{ cr }}</td>
      </tr>
      {{/each }}
    </tbody>
  </table>
  {{/if }}

</section>